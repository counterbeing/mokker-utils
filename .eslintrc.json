{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": "2017"
  },
  "extends": "eslint:recommended",
  "globals": {
    "require": true,
    "process": true,
    "module": true,
    "console": true
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-console": 0,
    "indent": [
      "error",
      2,
      { "MemberExpression": 1 }
    ]
  }
}
